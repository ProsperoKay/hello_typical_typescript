{
  "name": "hello_typescript",
  "version": "0.1.0",
  "description": "Saying hello to Typescript as Statically typed version of JavaScript",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev-tailwind dev-typescript",
    "dev-tailwind": "npx tailwindcss -i ./src/index.css -o ./public/css/index.css --minify --watch",
    "dev-typescript": "npx tsc -w"
  },
  "author": "ProsperoKay <prosperokay@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
